<UserControl x:Class="MyDeskopAssitant.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDeskopAssitant.Views"
             xmlns:converters="clr-namespace:MyDeskopAssitant.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource PrimaryBackgroundColor}">
        <StackPanel Margin="40">

            <TextBlock Text="Customize" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="0,0,0,30"/>

            <Border Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Path Data="M12,18C11.11,18 10.26,17.8 9.5,17.45C11.56,16.5 13,14.42 13,12C13,9.58 11.56,7.5 9.5,6.55C10.26,6.2 11.11,6 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31L23.31,12L20,8.69Z" 
                              Fill="{DynamicResource PrimaryTextColor}" Width="20" Height="20" Stretch="Uniform"/>
                        <TextBlock Text="Application Theme" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Theme" Content="Dark Theme" 
                                     IsChecked="{Binding IsDarkMode}"
                                     Foreground="{DynamicResource PrimaryTextColor}" FontSize="16" Margin="0,0,20,0"/>

                        <RadioButton GroupName="Theme" Content="Light Theme" 
                                     IsChecked="{Binding IsDarkMode, Converter={StaticResource InverseBoolConverter}}"
                                     Foreground="{DynamicResource PrimaryTextColor}" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="10" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Path Data="M17.5,12A1.5,1.5 0 0,1 16,10.5A1.5,1.5 0 0,1 17.5,9A1.5,1.5 0 0,1 19,10.5A1.5,1.5 0 0,1 17.5,12M14.5,8A1.5,1.5 0 0,1 13,6.5A1.5,1.5 0 0,1 14.5,5A1.5,1.5 0 0,1 16,6.5A1.5,1.5 0 0,1 14.5,8M9.5,8A1.5,1.5 0 0,1 8,6.5A1.5,1.5 0 0,1 9.5,5A1.5,1.5 0 0,1 11,6.5A1.5,1.5 0 0,1 9.5,8M6.5,12A1.5,1.5 0 0,1 5,10.5A1.5,1.5 0 0,1 6.5,9A1.5,1.5 0 0,1 8,10.5A1.5,1.5 0 0,1 6.5,12M12,3A9,9 0 0,0 3,12A9,9 0 0,0 12,21C12.45,21 12.88,20.91 13.29,20.76C13.62,20.63 13.91,20.76 14.1,21.05L15.34,22.84C15.84,23.57 16.96,23.63 17.54,22.96L17.83,22.63C18.67,21.67 19.04,20.39 18.84,19.12L18.66,18.06C18.53,17.26 18.88,16.47 19.57,16.03C21.05,15.09 21.84,13.4 21.57,11.66C21.21,9.33 19.33,7.46 17,7.1C16.96,7.1 16.92,7.1 16.88,7.1C16.38,7.1 16,6.62 16,6.13V4.39C16,3.03 14.47,2.16 13.28,2.77C12.87,2.95 12.44,3.05 12,3Z" 
                              Fill="{DynamicResource PrimaryBlueColor}" Width="20" Height="20" Stretch="Uniform"/>
                        <TextBlock Text="Primary Color" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <TextBlock Text="Hex Code( #FF5733 or Green):" Foreground="Gray" Margin="0,0,0,5"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding HexInput, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="200" Height="40" VerticalContentAlignment="Center" FontSize="16" Padding="5"/>

                        <Border Width="40" Height="40" Margin="10,0,0,0" CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding HexInput}"/>
                            </Border.Background>
                        </Border>

                        <Button Content="Apply" Command="{Binding ApplyColorCommand}" 
                                Width="100" Height="40" Margin="20,0,0,0"
                                Style="{StaticResource MusicControlButton}" Background="{DynamicResource PrimaryBlueColor}" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Background="#FF007ACC" Width="40" Height="40" Margin="0,0,10,0" Command="{Binding ApplyColorCommand}" CommandParameter="#FF007ACC" Click="QuickColor_Click" Style="{StaticResource MusicControlButton}"/>
                        <Button Background="#FF5555" Width="40" Height="40" Margin="0,0,10,0" Command="{Binding ApplyColorCommand}" CommandParameter="#FF5555" Click="QuickColor_Click" Style="{StaticResource MusicControlButton}"/>
                        <Button Background="#4CAF50" Width="40" Height="40" Margin="0,0,10,0" Command="{Binding ApplyColorCommand}" CommandParameter="#4CAF50" Click="QuickColor_Click" Style="{StaticResource MusicControlButton}"/>
                        <Button Background="#FF9800" Width="40" Height="40" Margin="0,0,10,0" Command="{Binding ApplyColorCommand}" CommandParameter="#FF9800" Click="QuickColor_Click" Style="{StaticResource MusicControlButton}"/>
                        <Button Background="#9C27B0" Width="40" Height="40" Margin="0,0,10,0" Command="{Binding ApplyColorCommand}" CommandParameter="#9C27B0" Click="QuickColor_Click" Style="{StaticResource MusicControlButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>