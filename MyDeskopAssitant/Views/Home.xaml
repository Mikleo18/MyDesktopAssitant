<UserControl x:Class="MyDeskopAssitant.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDeskopAssitant.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="{DynamicResource PrimaryBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="30,40,30,10">
            <TextBlock Text="{Binding GreetingText}" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextColor}"/>

            <TextBlock Text="{Binding CurrentDate, ConverterCulture='tr-TR'}" 
                       FontSize="18" 
                       Foreground="{DynamicResource SecundaryIconColor}" 
                       Margin="0,5,0,0"/>

            <TextBlock Text="{Binding CurrentTime}" 
                       FontSize="60" FontWeight="Light" 
                       Foreground="{DynamicResource PrimaryBlueColor}"
                       HorizontalAlignment="Right" Margin="0,-60,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10" Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource todolist}" Fill="{DynamicResource PrimaryBlueColor}" Width="20" Height="20" Stretch="Uniform"/>
                        <TextBlock Text="Görev Durumu" FontSize="16" Foreground="{DynamicResource SecundaryIconColor}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="{Binding TodoSummary}" 
                               FontSize="28" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextColor}" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>

                    <TextBlock Grid.Row="2" Text="To-Do Listesinden" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" Margin="10" Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource calendar}" Fill="#FF5555" Width="20" Height="20" Stretch="Uniform"/>
                        <TextBlock Text="Sıradaki Etkinlik" FontSize="16" Foreground="{DynamicResource SecundaryIconColor}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CalendarSummary}" 
                                   FontSize="24" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                   TextAlignment="Center" TextWrapping="Wrap"/>

                        <TextBlock Text="{Binding CalendarTimeSummary}" 
                                   FontSize="16" Foreground="{DynamicResource PrimaryBlueColor}" 
                                   TextAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="Takvimden" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Border Grid.Column="2" Margin="10" Background="{DynamicResource SecundaryBackgroundColor}" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19.36,10.04C18.67,6.59 15.64,4 12,4C9.11,4 6.6,5.64 5.35,8.04C2.34,8.36 0,10.91 0,14A6,6 0 0,0 6,20H19A5,5 0 0,0 24,15C24,12.36 21.95,10.22 19.36,10.04Z" 
                              Fill="{DynamicResource PrimaryBlueColor}" Width="24" Height="24" Stretch="Uniform"/>
                        <TextBlock Text="{Binding WeatherCity}" FontSize="16" Foreground="{DynamicResource SecundaryIconColor}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Source="{Binding WeatherIconUrl}" Width="60" Height="60" RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="{Binding WeatherTemp}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="{Binding WeatherDesc}" FontSize="14" Foreground="Gray" HorizontalAlignment="Right" FontStyle="Italic"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>