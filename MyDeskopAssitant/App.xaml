<Application x:Class="MyDeskopAssitant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyDeskopAssitant"
             StartupUri="MainWindow.xaml"
             xmlns:vm="clr-namespace:MyDeskopAssitant.ViewModels" 
             xmlns:views="clr-namespace:MyDeskopAssitant.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
                <ResourceDictionary Source="Assets/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:MusicViewModel}">
                <views:Music/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:VideoViewModel}">
                <views:Video/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CalenderViewModel}">
                <views:Calender/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ToDoViewModel}">
                <views:TodoList/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:Home/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:Settings/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
